<%- include("partials/header.ejs") %>

    <div class="container new-comment-container">
        <form action="/movie/<%= foundComment.movieId %>/comments/<%= foundComment._id %>?_method=PUT" method="Post">
            <h1>Edit Comment</h1>

            <div class="form-group">
                <label for="text">Comment</label>
                <textarea name="text" id="text" class="form-control" cols="30" rows="10"
                    required><%= foundComment.text %></textarea>
            </div>

            <button type="submit" class="btn btn-primary my-3">Submit Comment</button>
        </form>
    </div>

    <%- include("partials/footer.ejs") %>