<%- include("partials/header.ejs") %>

    <div class="container">
        <h1 class="new-movie-header">Add New Movie</h1>

        <form action="/movie" method="POST" class="form">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" placeholder="title" class="form-control" cols="30" rows="20" autofocus>
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea type="text" name="description" placeholder="description" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label for="actors">Actors</label>
                <input type="text" name="actors" placeholder="e.g deo, van diesel, keane" class="form-control">
            </div>

            <div class="form-group">
                <label for="producer">Producer</label>
                <input type="text" name="producer" placeholder="e.g marvel" class="form-control">
            </div>

            <div class="form-group">
                <label for="rating">Rating</label>
                <input type="number" name="rating" placeholder="e.g 7.5" class="form-control">
            </div>

            <div class="form-group">
                <label for="date">Date</label>
                <input type="date" name="date" class="form-control">
            </div>

            <div class="form-group">
                <label for="image">Genre</label>
                <select name="genre" id="" class="form-control">
                    <option disabled selected>-- Choose Below --</option>
                    <option>Action</option>
                    <option>Horror</option>
                    <option>Comedy</option>
                    <option>Adventure</option>
                    <option>Sci-fi</option>
                    <option>Drama</option>
                    <option>Fantasy</option>
                </select>
            </div>

            <div class="form-group">
                <label for="image">Image URL</label>
                <input type="text" name="image" placeholder="image link" class="form-control">
            </div>

            <button type="submit" class="btn btn-primary my-3">Submit</button>
        </form>
    </div>

    <%- include("partials/footer.ejs") %>